<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easystock">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/stock_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/stock_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyStock">
        <activity android:name=".views.activities.test" /> <!-- Agregar para fotos producto -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".views.activities.ShowStock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.UsersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.StockActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
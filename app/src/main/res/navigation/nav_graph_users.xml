<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_users"
    app:startDestination="@id/usersFragment">

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.example.easystock.views.fragments.UsersFragment"
        android:label="UsersFragment" >
        <action
            android:id="@+id/action_usersFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_usersFragment_to_crudUserFragment"
            app:destination="@id/crudUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/crudUserFragment"
        android:name="com.example.easystock.views.fragments.CrudUserFragment"
        android:label="CrudUserFragment" >
        <action
            android:id="@+id/action_crudUserFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.easystock.views.fragments.UserProfileFragment"
        android:label="UserProfileFragment" >
        <action
            android:id="@+id/action_userProfileFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
    </fragment>

</navigation>